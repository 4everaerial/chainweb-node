          chainweb
        -- external
        , base >=4.10 && <5.0

-- -------------------------------------------------------------------------- --
-- Test Library

library chainweb-test
    default-language: Haskell2010
    hs-source-dirs: test/chainweb
    ghc-options: -Wall
    exposed-modules:
          Chainweb.ChainDB.Entry.Int
    build-depends:
        -- internal
          chainweb
        -- external
        , base >=4.10 && <5.0
        , base-unicode-symbols >=0.2
