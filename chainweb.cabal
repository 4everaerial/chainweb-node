-- -------------------------------------------------------------------------- --
-- Chainweb Test suite
-- -------------------------------------------------------------------------- --

test-suite chainweb-tests
    default-language: Haskell2010
    ghc-options:
        -Wall
        -Wincomplete-record-updates
        -Wincomplete-uni-patterns
        -Wredundant-constraints
        -threaded
        -with-rtsopts=-N
    type: exitcode-stdio-1.0
    hs-source-dirs: test
    main-is: ChainwebTests.hs
    other-modules:
        Chainweb.Test.BlockHeaderDB
        Chainweb.Test.DiGraph
        Chainweb.Test.Orphans.External
        Chainweb.Test.Orphans.Internal
        Chainweb.Test.RestAPI
        Chainweb.Test.Roundtrips
        Chainweb.Test.TreeDB.RemoteDB
        Chainweb.Test.TreeDB.Persistence
        Chainweb.Test.TreeDB.Sync
        Chainweb.Test.Utils

    build-depends:
        -- internal
          chainweb

        -- external
        , QuickCheck >= 2.10
        , aeson >= 1.4
        , async >= 2.2
        , base >= 4.11
        , bytes >= 0.15
        , bytestring >= 0.10
        , containers >= 0.5
        , data-dword >= 0.3
        , fake >= 0.1
        , fgl >= 5.6
        , hashable >= 1.2
        , http-client >= 0.5
        , http-types >= 0.12
        , massiv >= 0.2
        , mwc-random >= 0.13
        , network >= 2.6
        , pact == 2.6.*
        , paths >= 0.2
        , quickcheck-instances >= 0.3
        , reflection >= 2.1
        , resourcet >= 1.2
        , servant-client >= 0.13
        , streaming >= 0.2.2
        , tasty >= 1.0
        , tasty-hunit >= 0.9
        , tasty-quickcheck >= 0.9
        , text >= 1.2
        , these >= 0.7
        , transformers >= 0.5
        , unordered-containers >= 0.2
        , wai >= 3.2
        , warp >= 3.2

